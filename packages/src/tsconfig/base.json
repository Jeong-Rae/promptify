{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["es2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "moduleDetection": "force",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["packages/shared/src/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
  }
  